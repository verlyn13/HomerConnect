run = "       echo \"Run button configured via Workflows tool. Select desired Workflow.\"      "
[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "       echo \"Run button configured via Workflows tool. Select desired Workflow.\"      "]

[workflows]
runButton = "[Dev] Run Full Stack (Node Backend)"

[[workflows.workflow]]
name = "[Setup] Install All Dependencies"
author = 22265372
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm install"

[[workflows.workflow]]
name = "[Dev] Run Backend (Node)"
author = 22265372
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run start:dev"

[[workflows.workflow]]
name = "[Dev] Run Frontend"
author = 22265372
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow]]
name = "[Dev] Run Full Stack (Node Backend)"
author = 22265372
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/frontend && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && npm run start:dev"
